                <section class="contact-page">
                    <div class="container">
                        <div class="iletisim-title text-center">
                            <h4>İletişim</h4>
                            <h2>Formu</h2>
                        </div>

                        <div class="contact-form">
                            @using (Html.BeginForm("Post", "Iletisim", FormMethod.Post, new { @class = "contact-form-validated contact-one__form" }))
                            {
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="contact-form__input-box">
                                            <input type="text" placeholder="İsim" name="Ad">
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="contact-form__input-box">
                                            <input type="text" placeholder="Soyisim" name="Soyad">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="contact-form__input-box">
                                            <input type="email" placeholder="E-Posta Adresi" name="Eposta">
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="contact-form__input-box">
                                            <input type="text" placeholder="Telefon Numarası" name="Telefon">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="contact-form__input-box">
                                            <textarea name="mesaj" placeholder="Mesajınızı Bu Alana Yazın"></textarea>
                                        </div>
                                        <button type="submit" class="thm-btn contact-form__btn">Gönder</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </section><br />
            </div>
