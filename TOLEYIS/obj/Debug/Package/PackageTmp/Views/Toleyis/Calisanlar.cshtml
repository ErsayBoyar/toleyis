
@{
    ViewBag.Title = "Calisanlar";
    Layout = "~/Views/Shared/DuzYaziLayout.cshtml";
    ViewBag.Sekme = "Toleyis";
    ViewBag.Baslik = "Çalışanlarımız";
}
<link href="~/assets/css/style.css" rel="stylesheet" />
<!--Çalışanlarımız-Start-->
<section class="news-details">
    <div class="container">
        <div class="row">
            @Html.Action("Sidebar", "AnaSayfa")

            <div class="col-xl-9 col-lg-8">
                <section class="calisanlarimiz">
                    <div class="container">
                        <div class="row"  style=" place-content: center; ">
                            @foreach (var m in Model)
                            {
                                <div class="col-xl-4 col-lg-4 col-md-4 wow fadeInUp" data-wow-delay="500ms">
                                    <!--Çalışanlarımız kartları-->
                                    <div class="calisanlarimiz__single">
                                        <div class="calisanlarimiz__img">
                                            @if (m.Resim == null)
                                            {
                                                <img src="~/assets/images/backgrounds/calisanlogo.PNG" style=" height: 180px;"/>
                                            }
                                            <img src="@ViewBag.dosyayolu/@m.Resim" alt="" style=" height: 180px;">
                                        </div>
                                        <div class="calisanlarimiz__content">
                                            <div class="calisanlarimiz__name">
                                                <h3>@m.AdSoyad</h3>
                                            </div>
                                            <div class="calisanlarimiz__social-info">
                                                <div class="left">
                                                    <p>@m.GorevTR</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>
                </section>
            </div>

        </div>
    </div>
</section>
<!--Çalışanlarımız-End-->
