
@{
    Layout = null;
}

<!-- Modal -->
<div class="row">

    <div class="col-md-3">
        @if (Model.Foto == null)
        {
            <img src="~/assets/images/backgrounds/calisanlogo.PNG" class="col-md-12" />
        }
        else
        {
            <img src="@ViewBag.dosyayolu/@Model.Foto" class="col-md-12" />
        }
        <p style="text-align: -webkit-center; margin-bottom: auto; "><b>@Model.Ad @Model.Soyad</b></p>
        <p class="calisanlarimiz__social-info" style="text-align: -webkit-center; font-size: smaller; ">@Model.Gorev</p>
    </div>
    <p class="col-md-9" style="text-align: justify;">@Html.Raw(Model.OzgecmisTR)</p>


</div>