@model IEnumerable<TOLEYIS.Models.Yonetim>
@{
    ViewBag.Title = "GenelYonetim";
    Layout = "~/Views/Shared/DuzYaziLayoutEN.cshtml";
    ViewBag.Baslik = "General Management";
    ViewBag.Sekme = "Toleyis";

}


<link href="~/assets/css/style.css" rel="stylesheet" />


<!--Meet Volunteers One Start-->
<section class="meet-volunteers-one">
    <div class="container">

        <div class="row col-md-12" style=" margin-left: auto; ">
            @Html.Action("Sidebar", "Home")
            <div class="col-md-9 row">
                <div class="col-md-12">
                    <div class="text-center calisanlarimiz__name">
                        <h2>GENERAL MANAGEMENT MEMBERS</h2>
                    </div><br />
                </div>
                <div class="row" style=" place-content: center; ">
                    <div class="col-md-3">
                        
                    </div>
                    @foreach (var m in Model.Where(x => x.UnvanID == 1 && x.Id == 1))
                    {

                        <div class="col-md-6 wow fadeInUp view2" data-wow-delay="100ms" data-target="/Toleyis/GenelYonPopup/@m.Id" data-toggle="modal" >
                            <!--Meet Volunteers One Single-->
                            <div class="meet-volunteers-one__single">
                                <div class="meet-volunteers-one__img">
                                    @if (m.Foto == null)
                                    {
                                        <img src="~/assets/images/backgrounds/calisanlogo.PNG" />
                                    }
                                    else
                                    {
                                        <img src="@ViewBag.dosyayolu/@m.Foto" alt="">
                                    }
                                </div>
                                <div class="meet-volunteers-one__content">
                                    <div class="calisanlarimiz__name">
                                        <h3>@m.Ad @m.Soyad</h3>
                                    </div>
                                    <div class="calisanlarimiz__social-info">
                                        <div class="left">
                                            <p>@m.Gorev</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="col-md-3">

                    </div>
                    <div class="row" style=" place-content: center; ">
                        @foreach (var m in Model.Where(x => x.UnvanID == 1 && x.Id != 1))
                        {
                            <div class="col-md-6 wow fadeInUp view2" data-wow-delay="200ms" data-target="/Toleyis/GenelYonPopup/@m.Id" data-toggle="modal" >
                                <!--Meet Volunteers One Single-->
                                <div class="meet-volunteers-one__single">
                                    <div class="meet-volunteers-one__img">
                                        @if (m.Foto == null)
                                        {
                                            <img src="~/assets/images/backgrounds/calisanlogo.PNG" />
                                        }
                                        else
                                        {
                                            <img src="@ViewBag.dosyayolu/@m.Foto" alt="">
                                        }
                                    </div>
                                    <div class="meet-volunteers-one__content">
                                        <div class="calisanlarimiz__name">
                                            <h3>@m.Ad @m.Soyad</h3>
                                        </div>
                                        <div class="calisanlarimiz__social-info">
                                            <div class="left">
                                                <p>@m.Gorev</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-12" style=" margin-top: 25px;">
                        <div class="text-center calisanlarimiz__name">
                            <h2>GENERAL AUDIT BOARD MEMBERS</h2>
                        </div><br />
                    </div>
                    <div class="row">
                        @foreach (var m in Model.Where(x => x.UnvanID == 2))
                        {
                            <div class="col-xl-4 col-lg-4 col-md-4 wow fadeInUp view2" data-wow-delay="500ms" data-target="/Toleyis/GenelYonPopup/@m.Id" data-toggle="modal" >
                                <!--Meet Volunteers One Single-->
                                <div class="calisanlarimiz__single">
                                    <div class="calisanlarimiz__img">
                                        @if (m.Foto == null)
                                        {
                                            <img src="~/assets/images/backgrounds/calisanlogo.PNG" />
                                        }
                                        else
                                        {
                                            <img src="@ViewBag.dosyayolu/@m.Foto" alt="">
                                        }
                                    </div>
                                    <div class="calisanlarimiz__content">
                                        <div class="calisanlarimiz__name">
                                            <h3>@m.Ad @m.Soyad</h3>
                                        </div>
                                        <div class="calisanlarimiz__social-info">
                                            <div class="left">
                                                <p>@m.Gorev</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-12" style=" margin-top: 25px;">
                        <div class="text-center calisanlarimiz__name">
                            <h2>GENERAL DISCIPLINE BOARD MEMBERS</h2>
                        </div><br />
                    </div>
                    <div class="row">
                        @foreach (var m in Model.Where(x => x.UnvanID == 3))
                        {
                            <div class="col-xl-4 col-lg-4 col-md-4 wow fadeInUp view2" data-wow-delay="500ms" data-target="/Toleyis/GenelYonPopup/@m.Id" data-toggle="modal" >
                                <!--Meet Volunteers One Single-->
                                <div class="calisanlarimiz__single">
                                    <div class="calisanlarimiz__img">
                                        @if (m.Foto == null)
                                        {
                                            <img src="~/assets/images/backgrounds/calisanlogo.PNG" />
                                        }
                                        else
                                        {
                                            <img src="@ViewBag.dosyayolu/@m.Foto" alt="">
                                        }
                                    </div>
                                    <div class="calisanlarimiz__content">
                                        <div class="calisanlarimiz__name">
                                            <h3>@m.Ad </h3>
                                            <h3>@m.Soyad </h3>
                                        </div>
                                        <div class="calisanlarimiz__social-info">
                                            <div class="left">
                                                <p>@m.Gorev</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

