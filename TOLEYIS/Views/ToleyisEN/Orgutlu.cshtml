
@{
    ViewBag.Title = "Orgutlu";
    Layout = "~/Views/Shared/DuzYaziLayoutEN.cshtml";
    ViewBag.Baslik = "Organized Workplaces";
    ViewBag.Sekme = "Toleyis";
}


<link href="~/assets/css/style.css" rel="stylesheet" />
<!--Page Header End-->
<!--News Details Start-->
<section class="news-details">
    <div class="container">
        <div class="row">
            @Html.Action("Sidebar", "Home")
            <div class="il-isimleri" style="top:20px; left:0px;"></div>

            <div class="col-xl-9 col-lg-8" style=" text-align: -webkit-center;">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style=" height: 340px; width: 750px; ">
                    <div class="carousel-inner" style=" border-radius: 10px; ">
                        <div class="carousel-item active">
                            <img class="" src="~/assets/images/orgutluslider/Çırağan Palace Kempinski.jpg" alt="">
                            <div class="carousel-caption d-none d-md-block" style="padding-bottom: 0px; backdrop-filter: brightness(0.5); ">
                                <p>Çırağan Palace Hotel Kempinski, İstanbul</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="" src="~/assets/images/orgutluslider/Dati Yatırım Holding.jpg" alt=" ">
                            <div class="carousel-caption d-none d-md-block" style="padding-bottom: 0px; backdrop-filter: brightness(0.5); ">
                                <p>Dati Yatırım Holding</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="" src="~/assets/images/orgutluslider/İberotel Sarıgerme.jpg" alt=" ">
                            <div class="carousel-caption d-none d-md-block" style="padding-bottom: 0px; backdrop-filter: brightness(0.5); ">
                                <p>İberotel Sarıgerme</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="" src="~/assets/images/orgutluslider/Robinson Club GBH Turizm.jpg" alt=" ">
                            <div class="carousel-caption d-none d-md-block" style="padding-bottom: 0px; backdrop-filter: brightness(0.5); ">
                                <p>Robinson Club GBH Turizm</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="" src="~/assets/images/orgutluslider/THY DO_CO.jpg" alt=" ">
                            <div class="carousel-caption d-none d-md-block" style="padding-bottom: 0px; backdrop-filter: brightness(0.5); ">
                                <p>THY DO&CO</p>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="" src="~/assets/images/orgutluslider/TJK.jpeg" alt=" ">
                            <div class="carousel-caption d-none d-md-block" style="padding-bottom: 0px; backdrop-filter: brightness(0.5); ">
                                <p>Türkiye Jokey Kulübü</p>
                            </div>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <br />
                @Html.Action("Index", "Harita")
                <br />
                <section class="dropdown-sube">
                    <div class="container">
                        <div class="row" style=" place-content: center; ">
                            <div class="dropdown-sube-baslik" style="margin-right:28px;">
                                <span>ORGANİZED WORKPLACES:</span>
                            </div>
                            <div class="main-dropdown">
                                <div class="dropdown">
                                    @Html.DropDownList("Iller", null, "-Choose-", new { @class = "form-control dropdown", onchange = "GetUserDetails(this);", @id = "drpiller", @name = "drpiller" })
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <div id="dvUserDetails">

                </div>

            </div>
        </div>
    </div>
</section>
<!--News Details End-->
<!--dropdowna göre getirme scripti-->
<script type="text/javascript">
    function GetUserDetails(obj) {
        var selectedUser = $(obj).val();
        var urlToHit = '/ToleyisEN/IlSec';
        $.ajax({
            url: urlToHit,
            cache: false,
            type: "POST",
            data: { id: selectedUser },
            success: function (data) {
                $("#dvUserDetails").html(data);
            },
            error: function () {
                alert("failed");
            }
        });
    }
</script>