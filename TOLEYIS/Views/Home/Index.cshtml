    "navigation": {
        "nextEl": ".main-slider-button-next",
        "prevEl": ".main-slider-button-prev",
        "clickable": true
    },
    "autoplay": {
        "delay": 5000
    }}'>
                    <div class="swiper-wrapper mobilsliderB">
                        @foreach (var m in ViewData["slidee2"] as IEnumerable<TOLEYIS.Models.anaslider>)
                        {
                            <div class="swiper-slide">
                                @*<a href="/Haberler/HaberDetay/@m.Id">*@
                                @if (m.Kapak == null)
                                {
                                    <div class="image-layer imgrespo" style="background-image: url(../assets/images/backgrounds/calisanlogo.PNG); -webkit-transform: scale(1.2) rotate(0deg);"></div>
                                    <div class="container">
                                        <div class="swiper-slide__inner">
